<div data-controller="modal">
    <button data-action="click->modal#open">
        <% if button %>
            <%= button %>
        <% else %>
            <span>Abrir modal</span>
        <% end %>
    </button>
    <dialog data-modal-target="dialog" class="w-80 h-fit p-4 rounded-xl top-0">
        <div class="flex flex-col justify-between">
            <header class="flex flex-col gap-5">
                <div class="w-full flex justify-between">
                    <h1 class="text-2xl text-gray-950 font-medium"><%= @title %></h1>
                    <i class="material-icons text-gray-950 cursor-pointer" data-action="click->modal#close">close</i>
                </div>
                <p><%= body %></p>
            </header>
        <footer class="w-full h-fit">
            <%= footer%>
        </footer>
    </div>
    </dialog>
</div>

