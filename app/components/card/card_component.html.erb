<div class="w-full cursor-pointer p-4 h-72 flex flex-col gap-5 rounded-xl border border-gray-400 shadow-md">
    <div class="flex justify-between gap-2">
        <h1 class="text-lg text-gray-950 whitespace-nowrap font-semibold w-full overflow-hidden text-ellipsis">
            <%= @title %>
        </h1>
    </div>
    <div class="w-full h-full overflow-hidden">
        <ul class="flex w-full flex-col gap-4">
            <% @items.each do |item| %>
                <li class="w-full flex justify-between">
                    <div class="flex gap-2 w-full">
                        <%= render Checkbox::CheckboxComponent.new(checked: item.done) %>
                        <p class="text-gay-950 text-md w-full overflow-hidden text-ellipsis whitespace-nowrap"><%= item.text %></p>
                    </div>
                </li>
            <% end %>
        </ul>
    </div>
    <% if @items.length > 4 %>
        <div class="w-full px-4 flex justify-center text-secondary-500">
            <i class="material-icons">more_horiz</i>
        </div>
    <% end %>
</div>
